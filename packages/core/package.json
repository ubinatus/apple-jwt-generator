{
  "name": "apple-jwt-generator",
  "version": "1.1.0",
  "description": "Generates Apple Client Secret for Sign in with Apple (SIWA) authentication.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ubinatus/apple-jwt-generator.git",
    "directory": "packages/core"
  },
  "keywords": [
    "apple",
    "jwt",
    "siwa",
    "oauth"
  ],
  "author": "ubinatus",
  "homepage": "https://apple-jwt-generator.vercel.app",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.5",
    "eslint": "^8.56.0",
    "eslint-config": "workspace:*",
    "tsconfig": "workspace:*",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "jsonwebtoken": "^9.0.2"
  }
}
